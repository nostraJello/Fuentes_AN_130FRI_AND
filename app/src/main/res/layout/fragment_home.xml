<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:paddingTop="60dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Zero Layout -->
        <LinearLayout
            android:id="@+id/zeroLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/firstLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/equalsBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="22sp"
                android:backgroundTint="@null"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/bg_button1"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/periodBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="22sp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/bg_button1"
                app:layout_constraintStart_toEndOf="@id/zeroBTN"
                app:layout_constraintEnd_toStartOf="@id/equalsBTN"
                app:layout_constraintTop_toTopOf="parent"
                app:backgroundTint="@null"
                app:layout_constraintHorizontal_chainStyle="spread"/>

            <Button
                android:id="@+id/zeroBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="22sp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/bg_button1"
                app:layout_constraintStart_toStartOf="parent"
                app:backgroundTint="@null"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>

        <!-- First Layout (still a LinearLayout) -->
        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/secondLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/oneBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="1"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/twoBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="2"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/threeBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="3"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/plusBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="+"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Second Layout -->
        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/thirdLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/fourBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="4"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/fiveBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="5"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/sixBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="6"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/minusBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="-"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Third Layout -->
        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/fourthLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/sevenBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="7"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/eightBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="8"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/nineBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="9"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/timesBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="x"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Fourth Layout -->
        <LinearLayout
            android:id="@+id/fourthLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/outputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/acBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="C"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/backspaceBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="@string/backSpace"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/moduloBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="%"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/divideBTN"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_button2"
                android:text="÷"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#256FF3"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/outputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/outputTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textAlignment="viewEnd"
                android:textSize="79sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/inputTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/outputTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>